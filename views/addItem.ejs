<div class="detail-container">
          <h1>Add Note</h1>
          <form action="/note/add" method="post">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Title ...">
            <label for="content">Content</label>
            <textarea name="content" cols="40" rows="10" id="content" placeholder="Content ..."></textarea>
             <span class="folder_box"><label for="folder">Folder</label>
              <% if(typeof folders !== 'undefined'){ %>
                <select name="folderID" id="folder">
                  <option value="no folder">no folder</option>
                  <% folders.forEach(folder => { %>
                  <option value="<%= folder.folderID %>"><%= folder.folderName %></option>
                  <% }) %>
                </select>
                <% } else{ %>
                <select name="" id="">
                  <option value="no folder">no folder</option>
                </select>
                <% } %>
                <a href="/modify/folders"> <img class="edit_folders_button" src="/icons/edit.svg" role="button" alt="edit folders"></a>
              </span>
            <button id="saveButton" type="submit">Add</button>
        </div>
        </form>